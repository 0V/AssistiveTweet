    <Storyboard x:Key="ButtonHoverStoryBoard">
        <ColorAnimation   
            Storyboard.TargetProperty="(Rectangle.Fill).(SolidColorBrush.Color)"
            To="#99303030" Duration="0:0:0.1"  Storyboard.TargetName="ButtonBackground"/>
    </Storyboard>
